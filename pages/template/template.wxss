/* Top tool bar */

.toolBar {
  width: 100%;
  height: 10vh;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  flex-direction: row;
}

.barButton {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  flex-direction: column;
  text-align: center;
}

.selectedLab {
  width: 100%;
  font-size: 0.9rem;
  line-height: 1.6rem;
  color: #ed761c;
}

.unselectedLab {
  width: 100%;
  font-size: 0.9rem;
  line-height: 1.6rem;
  color: black;
}

.selected {
  width: 90%;
  height: 2px;
  background-color: #ed761c;
  margin: 0 auto;
}

.unselected {
  width: 100%;
  height: 1px;
  background-color: lightgray;
}

/* no data view */

.noData {
  width: 100%;
  height: 100%;
  text-align: center;
  margin-top: 40%;
}

.noDataImage {
  width: 194rpx;
  height: 218rpx;
}

/* common table for goods list, consume coupon list, discount coupon list*/

.orderTable {
  width: 100%;
  min-height: 50vh;
}

.tableCell {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

/* left table cell, include three lines(title, starLevel, subtitle) */

.tableCellLeft {
  display: flex;
  width: 70%;
  height: 150rpx;
  padding: 2%;
  justify-content: center;
  flex-direction: column;
}

.leftCellContainer {
  display: table-row;
  font-size: 1rem;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  height: 40rpx;
}

.title {
  font-size: 1rem;
}

.subTitle {
  font-size: 0.9rem;
  color: gray;
}

.starContainer {
  width: 70%;
  display: flex;
  padding: 1%;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.eachStar {
  padding-right: 10rpx;
  display: table-column;
}

.imgStar {
  width: 25rpx;
  height: 25rpx;
}

/* right table cell, include one or two buttons(contact, send) */

.tableCellRight {
  display: flex;
  width: 20%;
  height: 150rpx;
  padding: 2%;
  justify-content: space-around;
}

.rightCellContainer {
  display: flex;
  height: 96%;
  width: 47%;
  align-items: flex-end;
}

.verticalGraySeperationLine{
  width: 2%;
  height: 40%;
  margin-top: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: inline-table;
  background-color: lightgray;
}

.imgSend {
  width: 60rpx;
  height: 60rpx;
}

.contact {
  width: 76rpx;
  height: 76rpx;
}

.separationLine {
  width: 100%;
  height: 2rpx;
  background-color: lightgray;
}

/* footer */

.mjFooter {
  text-align: center;
  color: gray;
  font-size: 0.8rem;
  height: 80rpx;
  padding-top: 40rpx;
}

/* verificationBar inclue scan QR code button and manual verification button */

.verificationBar {
  width: 96%;
  padding: 2%;
  height: 5vh;
  background-color: #ed761c;
  display: flex;
  justify-content: space-around;
}

.verificationButtonArea {
  color: white;
  display: inline-flex;
  justify-content: center;
  flex-direction: row;
}

.itemContainer {
  height: 33rpx;
  display: inline-table;
  font-size: 0.8rem;
  position: relative;
  top: 50%;
  margin-top: -16.5rpx;
}

.verificationButtonArea image {
  width: 33rpx;
  height: 33rpx;
  text-align: right;
  padding-right: 5rpx;
}

.verificationButtonArea label {
  text-align: left;
  vertical-align: middle;
  padding-left: 5rpx;
}

.verticalSeperationLine {
  background-color: white;
  width: 2rpx;
  height: 90%;
  display: table-column;
}