/* discountConfirm.wxss */
.discountConfirmPage {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f9;
}

.detailsContainer {
  width: 96%;
  text-align: left;
  background-color: white;
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 2%;
  margin-bottom: 2%;
}

.detailsTitle {
  font-size: 1rem;
  font-weight: bold;
  padding-top: 3%;
  padding-bottom: 3%;
}

.separationLine {
  height: 2rpx;
  background-color: #f5f5f9;
}

.detailsCell {
  padding-top: 3%;
  padding-bottom: 3%;
  display: flex;
  justify-content: space-between;
}

.detailsSubTitle {
  font-size: 0.8rem;
  display: inline-table;
}

.detailsInfo {
  font-size: 0.8rem;
  color: gray;
  display: inline-table;
  width: 60%;
  text-align: right
}

.confirmButtonArea{
  margin-top: 90%;
  width: 100%;
  background-color: #f5f5f9;
  padding-top: 10%;
}

.confirmButton{
  size: 'default';
  color: white;
  background-color: #ed761c;
  width: 80%;
  text-align: center;
}