/* goodsOrderDetails.wxss */

.goodsOrderDetailsPage {
  width: 100%;
  height: 100vh;
  vertical-align: middle;
  background-color: #f5f5f9;
}

.detailsContainer {
  width: 96%;
  text-align: left;
  background-color: white;
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 2%;
  margin-bottom: 2%;
}

.detailsTitle {
  font-size: 1rem;
  font-weight: bold;
  padding-top: 3%;
  padding-bottom: 3%;
}

.separationLine {
  height: 2rpx;
  background-color: #f5f5f9;
}

.detailsCell {
  padding-top: 3%;
  padding-bottom: 3%;
  display: flex;
  justify-content: flex-start;
}

.detailsSubTitle {
  font-size: 0.8rem;
  display: inline-table;
}

.detailsInfo {
  font-size: 0.8rem;
  color: gray;
  display: inline-table;
  width: 80%;
}

.eachStar {
  padding-right: 10rpx;
  display: table-column;
}

.imgStar {
  width: 25rpx;
  height: 25rpx;
}

.replyButtonArea{
  margin-top: 6%;
  margin-bottom: 6%;
  width: 100%;
  background-color: white;
  padding-top: 10%;
  padding-bottom: 10%;
}

.inputArea{
  padding-left: 10%;
  padding-right: 10%;
  text-align: left;
  width: 80%;
  margin-bottom: 4%;
  height: 100rpx;
}

.replyButton{
  size: 'default';
  color: white;
  background-color: #ed761c;
  width: 80%;
  text-align: center;
}