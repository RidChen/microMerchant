/* goodsManagement.wxss */

.goodsManagementPage {
  width: 100%;
  height: 100%;
}

.goodsTable {
  width: 100%;
  height: 100%;
}

.tableCell {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.tableCellLeft {
  display: inline-table;
  width: 80%;
  height: 120rpx;
  padding-top: 4%;
  padding-left: 4%;
  padding-right: 2%;
  flex-direction: column;
  line-height: 60rpx;
}

.title {
  display: table-row;
  font-size: 1rem;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  height: 60rpx;
}

.subTitle {
  display: table-row;
  font-size: 0.9rem;
  color: gray;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  height: 60rpx;
}

.tableCellRight {
  display: inline-table;
  flex-grow: 1;
  height: 120rpx;
  text-align: center;
}

.imgEdit {
  width: 40rpx;
  height: 61rpx;
  padding-top: 50rpx;
}

.separationLine {
  width: 100%;
  height: 2rpx;
  background-color: lightgray;
}

.mjFooter {
  text-align: center;
  color: gray;
  font-size: 0.8rem;
  height: 80rpx;
  padding-top: 40rpx;
}