/* editGoodsInfo.wxss */
.editGoodsInfoPage {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f9;
}

.editGoodsContainer {
  width: 96%;
  text-align: center;
  background-color: white;
  margin-top: 2%;
  margin-bottom: 4%;
  padding-left: 2%;
  padding-right: 2%;
}

.detailsCell {
  padding-top: 4%;
  padding-bottom: 4%;
  display: flex;
  justify-content: flex-start;
  text-align: left;
  flex-direction: row;
  align-items: baseline;
}

.detailsSubTitle {
  font-size: 1rem;
  display: inline-table;
  height: 80rpx;
  line-height: 80rpx;
}

.detailsInfo {
  font-size: 1rem;
  display: inline-table;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
}

.saveBtnArea{
  margin-top: 4%;
  width: 100%;
}

.saveBtn{
  size: 'default';
  color: white;
  background-color: #ed761c;
  width: 75%;
  text-align: center;
}

.separationLine {
  width: 100%;
  height: 2rpx;
  background-color: lightgray;
}

.inputArea{
  display: inline-table;
  width: 80%;
}

.discountUnit{
  color: #ed761c;
  font-size: 1.2rem;
  text-align: right;
  display: inline-table;
  width: 8%;
}